<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.ProfileFragment">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

     <!--   <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_arrow_back_24" />
        </androidx.appcompat.widget.Toolbar>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/profile_scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.7"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/tv_userMobile"
                            android:text="9891047659"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:textSize="20dp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="15dp"
                            android:layout_margin="5dp"
                            android:layout_weight=".3"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:layout_gravity="left"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_verified_24"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|center"
                                    android:layout_marginLeft="10dp"
                                    android:text="Verified"
                                    android:textColor="@color/green"
                                    android:background="@color/white"
                                    android:textSize="15dp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_text"
                        android:layout_marginTop="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/change_languageLL"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".2"
                            android:src="@drawable/ic_language_24" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_weight="2.2"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Change Language"

                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/text_20sp"/>

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".6"
                            android:layout_marginLeft="@dimen/space_30dp"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_keyboard_arrow_right_24"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_text"
                        android:layout_marginTop="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".2"
                            android:src="@drawable/ic_language_24" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Appearence"
                            android:layout_weight="2.2"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/text_20sp"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/space_30dp"
                            android:layout_weight=".6"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_keyboard_arrow_right_24"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_text"
                        android:layout_marginTop="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".2"
                            android:src="@drawable/ic_language_24" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Manage Account"
                            android:layout_weight="2.2"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/text_20sp"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:visibility="gone"
                            android:layout_marginLeft="@dimen/space_30dp"
                            android:layout_weight=".6"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_keyboard_arrow_right_24"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_text"
                        android:layout_marginTop="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".2"
                            android:src="@drawable/ic_language_24" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Contact Us"
                            android:layout_weight="2.2"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/text_20sp"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/space_30dp"
                            android:layout_weight=".6"
                            android:visibility="gone"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_keyboard_arrow_right_24"
                            />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_text"
                        android:layout_marginTop="20dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:weightSum="3"
                        android:id="@+id/about_usLL"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".2"
                            android:src="@drawable/ic_language_24" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_marginLeft="15dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2.2"
                            android:layout_gravity="center_vertical"
                            android:text="About Us"
                            android:textColor="@color/gray_text"
                            android:textSize="@dimen/text_20sp"/>
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/space_30dp"
                            android:layout_weight=".6"
                            android:fontFamily="@font/montserrat_regular"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_keyboard_arrow_right_24"
                            />

                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:id="@+id/btn_logout"
                        android:text="Log Out"
                        android:background="@color/gray_text"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

   </LinearLayout>
</layout>