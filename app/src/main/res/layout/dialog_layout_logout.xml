<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".dialog.LogoutFragment">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:strokeWidth="@dimen/space_1dp"
        app:strokeColor="@color/gray"
        style="@style/CustomCardCorners"
        android:elevation="8dp"
        android:alpha="0.8"
        android:backgroundTint="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <LinearLayout
                android:layout_above="@+id/rv_bottemLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/sad"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logging out?"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/manrope_extra_bold"
                    android:textSize="@dimen/text_20sp"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Are you sure about it?"
                    android:gravity="center_horizontal"
                    android:fontFamily="@font/manrope_regular" />

            </LinearLayout>



            <RelativeLayout
                android:id="@+id/rv_bottemLayout"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:layout_alignParentLeft="true"
                    android:id="@+id/btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/IconTextContainedButton"
                    android:backgroundTint="@color/white"
                    android:text="Cancel"
                    android:layout_marginLeft="@dimen/space_30dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:fontFamily="@font/manrope_semi_bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_logout"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/IconTextContainedButton"
                    android:backgroundTint="@color/red_btn"
                    android:text="yes, logout"
                    android:textColor="@color/white"
                    android:layout_marginRight="@dimen/space_30dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_gravity="right"
                    android:fontFamily="@font/manrope_semi_bold" />
            </RelativeLayout>


        </RelativeLayout>















    </com.google.android.material.card.MaterialCardView>



</com.google.android.material.card.MaterialCardView>